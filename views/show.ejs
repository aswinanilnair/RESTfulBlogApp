<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"> <%= blog.title%> </div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
            <div class="content">
                <span> <%= blog.created.toDateString() %> </span>
            </div>
            <div class="description" >
                <!-- If you want to render the description as html change the "=" to "-" . However, this is not safe and people can run JS code b/w <script>...</script> -->
                <p> <%= blog.body %> </p>
            </div>
            <a class="ui orange basic button" href="/blog/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>
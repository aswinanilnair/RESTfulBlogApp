<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"> New Blog </div>
    <form action="/blog" method="POST" class="ui form">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" placeholder="title" required>

        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" placeholder="image" required>
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="Description goes here" required></textarea>
        </div>
        
        <input type="submit" class="ui inverted big green button">
    </form>
</div>

<%- include("partials/footer") %>
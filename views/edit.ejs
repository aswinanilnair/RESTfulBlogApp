<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"> Edit Post: "<%= blog.title  %>"" </div>
    <!-- Method Override used to make a PUT request instead of POST as PUT is not supported ny html forms -->
    <form action="/blog/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>

        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="Description goes here" required><%= blog.body %></textarea>
        </div>
        
        <input type="submit" class="ui inverted big green button">
    </form>
</div>

<%- include("partials/footer") %>